{% if items is not empty and items|length > 0 %}
  <div class="splide image-slider lightbox-gallery">
    <div class="splide__track">
      <div class="splide__list">
        {% for item in items %}
          <div class="splide__slide">
            <a href="{{ item['#lightbox_url'] }}" target="blank">
              {{ item }}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}