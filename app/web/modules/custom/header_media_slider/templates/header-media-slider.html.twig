{% set slider_classes = [
  'splide',
  'header-media-slider',
  'height--' ~ slider_height|clean_class
] %}
<div{{attributes.addClass(slider_classes)}}{% if slider_options is not empty %} data-splide='{{ slider_options|json_encode(constant('JSON_HEX_QUOT')) }}'{% endif %}>
  <div class="splide__track">
    <ul class="splide__list">
      {% for slide in slides %}

        {% set slide_attributes = create_attribute() %}
        {% set slide_classes = [
          'splide__slide'
        ] %}

        <li{{slide_attributes.addClass(slide_classes)}}
          {% if slide.media.type == 'video_html' %} data-splide-html-video="{{ slide.media.url }}" {% endif %}
          {% if slide.media.type == 'video_youtube' %} data-splide-youtube="{{ slide.media.url }}" {% endif %}
          {% if slide.media.type == 'video_vimeo' %} data-splide-vimeo="{{ slide.media.url }}" {% endif %}>
          {# media (image) #}
          {% if slide.media.type == 'image' %}
            <div class="slider-media">
              {{ slide.media.responsive_image }}
            </div>
          {% endif %}

          {# optional markup #}
          {% if slide.headline is not empty or slide.content is not empty %}
            <div class="slider-markup-container">
              <div class="slider-markup">
                {% if slide.headline is not empty %}
                  <span>{{ slide.category }}</span>
									<h1>{{ slide.headline | raw }}</h1>
                  <time>{{ node.created.value|date('d.m.Y') }}</time>
								{% endif %}
                
                {% if slide.content is not empty %}
                  <div class="slider-content">
                    {{ slide.content | raw }}

                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}

        </li>
      {% endfor %}
    </ul>
  </div>
</div>
